<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
       <SurfaceView
            android:id="@+id/surface_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

       <!-- 没有放在surfaceview上面 -->
        <com.xmjcphone.zxing.view.ViewfinderView
            android:id="@+id/mo_scanner_viewfinder_view_new"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_pic_new"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:visibility="visible" />
        
        <TextView 
            android:id="@+id/tv_result"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textSize="20sp"
    		android:textColor="@color/green_normal"
    		android:layout_toRightOf="@id/img_pic_new"
            />
            
       
        
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:paddingLeft="10dp"
    		android:paddingRight="10dp"
    		android:layout_alignParentBottom="true"
    		android:orientation="horizontal"
            >
            <Button 
                android:id="@+id/btnDecode2"
                android:layout_width="match_parent"
    			android:layout_height="50dp"
    			android:layout_weight="1"
    			android:text="扫描"
    			android:textColor="@color/green_normal"
    			android:background="@android:color/transparent"
                />
            <Button 
                android:id="@+id/btnTakePic"
                android:layout_width="match_parent"
    			android:layout_height="50dp"
    			android:layout_weight="1"
    			android:text="拍照"
    			android:textColor="@color/green_normal"
    			android:background="@android:color/transparent"
                />
            <Button 
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
    			android:layout_height="50dp"
    			android:layout_weight="1"
    			android:text="返回"
    			android:textColor="@color/green_normal"
    			android:background="@android:color/transparent"
                />
        </LinearLayout>

</RelativeLayout>
